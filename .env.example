# Athlete OS - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# ============================================
# INTERVALS.ICU (Required for training data sync)
# ============================================
# Get your API key from: https://intervals.icu/settings
# Click "Developer Settings" â†’ "API Key"
INTERVALS_API_KEY=your_intervals_api_key_here

# ============================================
# GMAIL (Required for email delivery)
# ============================================
# Your Gmail address for sending briefings
GMAIL_ADDRESS=your.email@gmail.com

# Gmail App Password (NOT your regular password)
# Generate at: https://myaccount.google.com/apppasswords
# Requires 2FA enabled on your Google account
GMAIL_APP_PASSWORD=xxxx_xxxx_xxxx_xxxx

# ============================================
# WHOOP (Optional - for HRV/recovery data)
# ============================================
# Apply for developer access: https://developer.whoop.com
# Create an app to get client credentials
WHOOP_CLIENT_ID=your_whoop_client_id
WHOOP_CLIENT_SECRET=your_whoop_client_secret

# ============================================
# GITHUB (Optional - defaults shown)
# ============================================
# Repository for check-in workflow
GITHUB_REPO=wattgod/athlete-coaching-system
